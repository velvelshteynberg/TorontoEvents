<h1> Host Organizations </h1>

<% @hosts.each do |event| %>
    <ul>
        <li> <u> <%= link_to "#{event.name}" , admin_hosts_show_path(id: event.id),  :class => 'item'  %> </u> </li> 
    </ul>
<% end %>   


<h2> Create Host Organization </h2>
<%= form_for(@host, :url => host_organizations_path) do |f| %>

    <%= f.label 'Name' %>
    <br>
    <%= f.text_field 'name' %>
    <BR>
    <%= f.label 'Website URL' %>
    <br>
    <%= f.text_field 'website' %>
    <BR>
    <%= f.label 'Email address' %>
    <br>
    <%= f.email_field 'email' %>
    <BR>
    <%= f.label 'Mailing address' %>
    <br>
    <%= f.text_field 'mailing_address' %>
    <BR>
    <%= f.label 'Phone' %>
    <br>
    <%= f.text_field 'phone_number' %>
    <BR>
    <%= f.label 'Brief Description of Organizations' %>
    <br>
    <%= f.text_area 'description', size: "35x8" %>
    <BR>
    <%= f.submit 'Create organization' %>

<% end %>
