<h1> Host organization </h1>

<% @hosts.each do |event| %>
    <ul>
        <li> <u> <%= link_to "#{event.name}" , admin_hosts_show_path(id: event.id),  :class => 'item'  %> </u> </li> 
    </ul>
<% end %>

<%= form_for @host do |f| %>

    <%= f.label 'Name' %>
    <%= f.text_field 'name' %>
    
    <%= f.submit 'Create organiation' %>

<% end %>
