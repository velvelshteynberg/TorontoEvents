<% flash.each do |type, msg| %>
    <div><%= msg %></div>
<% end %>


<div class="form">
<div class="form_title"> Contact Us </div>
<p class="contact_statement"> Question, comment, or suggestion?  Fill out the form below, and we will try to get back to you as soon as possible. </p>

<%= form_for :random_guys, url: toronto_events_contact_us_form_path do |f| %>
    
    <div class="field">
    <%= f.label :first_name, :class => 'form_label'%>
    <%= f.text_field :first_name, autofocus: true, :class => 'form_box' %>
    </div>

    <div class="field">
    <%= f.label :last_name, :class => 'form_label'%>
    <%= f.text_field :last_name, :class => 'form_box' %>
    </div>
    
    <div class="field">
    <%= f.label :email, :class => 'form_label'%>
    <%= f.email_field :email, :class => 'form_box' %>
    </div>

    <div class="field">
    <%= f.label :message, :class => 'form_label'%>
    <%= f.text_area :message, :class => 'form_box' %>
    </div>

    <%= f.submit "Submit", :class => 'submit' %>
    <% end %>
    
</div>