<%= form_for @event do |f| %>
    <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :start_date %> <br>
    <%= f.date_field :start_date %>
    </p>
    <%= f.label :end_date %> <br>
    <%= f.date_field :end_date %>
    </p>
    <p>
    <%= f.label :start_time %> <br>
    <%= f.time_field :start_time%>
    </p>
    <p>
    <%= f.label :end_time %> <br>
    <%= f.time_field :end_time %>
    </p>
    <p>
    <%= f.label :address_line_1 %> <br>
    <%= f.text_field :address%>
    </p>
    
    <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.label :host_organization %> <br>
    <%= f.collection_select :host_organization_id, HostOrganization.all, :id, :name, {:prompt => "Please select a Host Organization"}%>
    </p>
    <%= f.label :caterer %> <br>
    <%= f.collection_select :caterer_id, Caterer.all, :id, :name, {:prompt => "Please select a Caterer"} %>
    </p>
    <p>
    <%= f.submit "Submit" %>
    </p>
    <% end %>