<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :username, autofocus: true, class: 'form_box' %>
    </div>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_box' %>
    </div>
  
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, class: 'form_box' %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form_box' %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_box' %>
    </div>
   
    <div class="field toggle_label">
      <label class="switch">
        <input type="checkbox">
        <span class="slider"> </span>  
      </label>
    Subscribe 
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: 'submit' %>
    </div>
  <% end %>
  
  <div class="users_shared_links">
  <%= render "users/shared/links" %>
  </div>